import android.support.annotation.NonNull;
import android.support.annotation.WorkerThread;
import java.util.ArrayList;

public final class PasswordAuthenticator implements PasswordAuthenticator {

    @NonNull
    private final patternPoints[] mCorrectPattern;

    public PasswordAuthenticator(@NonNull final patternPoints[] correctPattern) {
        mCorrectPattern = correctPattern;
    }

    
    public boolean isValidPattern(@NonNull final ArrayList<patternPoints> patternPoints) {
        //This calculations won't take much time.
        //We are not blocking the UI.
        for (int i = 0; i < mCorrectPattern.length; i++)
            if (!mCorrectPattern[i].equals(patternPoints.get(i))) return false;

        return mCorrectPattern.length == patternPoints.size();
    }
}
